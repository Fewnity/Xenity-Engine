# 			$(addprefix $(BUILD)/,$(addsuffix .o,$(notdir $(VPOFILES)))) \
# 			$(addprefix $(BUILD)/,$(addsuffix .o,$(notdir $(FPOFILES)))) \
# 			$(addprefix $(BUILD)/,$(CPPFILES:.cpp=.o)) \
# 			$(addprefix $(BUILD)/,$(CFILES:.c=.o)) \
# 			$(addprefix $(BUILD)/,$(sFILES:.s=.o)) \
# 			$(addprefix $(BUILD)/,$(SFILES:.S=.o))

# $(info CFILES = $(CFILES))
# $(info CPPFILES = $(CPPFILES))

# Generate the object file paths, maintaining the source directory structure
# export OFILES      := $(patsubst %.c,$(BUILD)/%.o,$(CFILES)) \
#                $(patsubst %.cpp,$(BUILD)/%.o,$(CPPFILES)) \
#                $(patsubst %.s,$(BUILD)/%.o,$(sFILES)) \
#                $(patsubst %.S,$(BUILD)/%.o,$(SFILES))

# Replace the directory part of the file paths to maintain structure
# OFILES      := $(foreach file,$(CFILES),$(BUILD)/$(notdir $(file:.c=.o))) \
#                $(foreach file,$(CPPFILES),$(BUILD)/$(notdir $(file:.cpp=.o))) \
#                $(foreach file,$(sFILES),$(BUILD)/$(notdir $(file:.s=.o))) \
#                $(foreach file,$(SFILES),$(BUILD)/$(notdir $(file:.S=.o)))
# $(info OFILES = $(OFILES))

#---------------------------------------------------------------------------------
# build a list of include paths
#---------------------------------------------------------------------------------
export INCLUDE	:=	$(foreach dir,$(INCLUDES), -I$(CURDIR)/$(dir)) \
					$(foreach dir,$(LIBDIRS),-I$(dir)/include) \
					$(LIBPSL1GHT_INC) \
					-I$(CURDIR)/$(BUILD)

#---------------------------------------------------------------------------------
# build a list of library paths
#---------------------------------------------------------------------------------
export LIBPATHS	:=	$(foreach dir,$(LIBDIRS),-L$(dir)/lib) \
					$(LIBPSL1GHT_LIB)

export OUTPUT	:=	$(CURDIR)/$(TARGET)
.PHONY: $(BUILD) clean

#---------------------------------------------------------------------------------
$(BUILD):
	@[ -d $@ ] || mkdir -p $@
	@$(MAKE) --no-print-directory -C $(BUILD) -f $(CURDIR)/Makefile

#---------------------------------------------------------------------------------
clean:
	@echo clean ...
	@rm -fr $(BUILD) $(OUTPUT).elf $(OUTPUT).self

#---------------------------------------------------------------------------------
run:
	ps3load $(OUTPUT).self

#---------------------------------------------------------------------------------
pkg:	$(BUILD) $(OUTPUT).pkg

#---------------------------------------------------------------------------------
else

DEPENDS	:=	$(OFILES:.o=.d)

# print-files:
# 	@echo "List of files to be compiled:"
# 	@echo $(DEPENDS)

#---------------------------------------------------------------------------------
# main targets
#---------------------------------------------------------------------------------
$(OUTPUT).self: $(OUTPUT).elf
$(OUTPUT).elf:	$(OFILES)

#---------------------------------------------------------------------------------
# This rule links in binary data with the .bin extension
#---------------------------------------------------------------------------------
%.bin.o	:	%.bin
#---------------------------------------------------------------------------------
	@echo $(notdir $<)
	@$(bin2o)

#---------------------------------------------------------------------------------
%.vpo.o	:	%.vpo
#---------------------------------------------------------------------------------
	@echo $(notdir $<)
	@$(bin2o)

#---------------------------------------------------------------------------------
%.fpo.o	:	%.fpo
#---------------------------------------------------------------------------------
	@echo $(notdir $<)
	@$(bin2o)

-include $(DEPENDS)

#---------------------------------------------------------------------------------
endif
