EE_CFLAGS = -fdata-sections -ffunction-sections -flto
EE_LDFLAGS = -fdata-sections -ffunction-sections -flto -Wl,--gc-sections

INCLUDE_DIR = include
INCLUDE_DIR2 = Source
EE_INCS += -I$(INCLUDE_DIR) -I$(INCLUDE_DIR2) -I$(PS2SDK)/ports/include -I$(PS2SDK)/ports/include/SDL -I$(PS2SDK)/ports/include/freetype2
EE_CXXFLAGS += -std=c++20

IRX_FILES += iomanX.irx fileXio.irx
EE_OBJS += $(IRX_FILES:.irx=_irx.o)

